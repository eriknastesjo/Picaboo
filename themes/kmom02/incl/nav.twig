<div class="header" role="banner">

<div class="background-lines-left"></div>
<div class="background-lines-right"></div>

<a href="{{ base_url }}">

    <div class="site-header">

            {% if pages["_meta"].meta.logo %}
                <div class="logo"></div>
            {% endif %}
            <div class="title" {{ pages["_meta"].meta.tagline ? ' class="tagline"' }}>
                    <h1>{{ site_title }}</h1>
                    {{ pages["_meta"].meta.tagline|markdown }}
            </div>

    </div>
</a>

    <div>
        <div class="nav" role="navigation" tabindex="-1">
        {# {# <p {% if page.id==current_page.id %} class="active" {% endif %}></p>  Spara till en annan g√•ng?} #}
            {% for page in pages(depthOffset=-1) if page.title and not page.hidden %}
                    <a class="no-underline" href="{{ page.url }}">
                        <p>
                            {{ page.title }}
                        </p>
                    </a>
            {% endfor %}
        </div>
    </div>
</div>



